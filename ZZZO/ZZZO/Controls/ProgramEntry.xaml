<UserControl x:Class="ZZZO.Controls.ProgramEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ZZZO.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
  <Grid Background="Aqua">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="3*" />
      <RowDefinition Height="Auto" />
      <RowDefinition />
    </Grid.RowDefinitions>

    <TextBlock Grid.Row="0" Grid.Column="0">Nadpis</TextBlock>
    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Nadpis, UpdateSourceTrigger=PropertyChanged}" />

    <TextBlock Grid.Row="1" Grid.Column="0">Text</TextBlock>
    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" />

    <TextBlock Grid.Row="2" Grid.Column="0">Podbod předchozího bodu programu</TextBlock>
    <CheckBox Grid.Row="2" Grid.Column="1" IsChecked="{Binding JePodbod, UpdateSourceTrigger=PropertyChanged}" />

    <TextBlock Grid.Row="3" Grid.Column="0">Doplněný bod programu</TextBlock>
    <CheckBox Grid.Row="3" Grid.Column="1" IsChecked="{Binding JeDoplneny, UpdateSourceTrigger=PropertyChanged}" />

    <TextBlock Grid.Row="4" Grid.Column="0">Seznam usnesení</TextBlock>
    <ComboBox Name="CmbUsneseni" IsEnabled="{Binding ElementName=CmbUsneseni, Path=HasItems}"
              ItemsSource="{Binding Usneseni}" Grid.Row="4" Grid.Column="1">
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <TextBlock Text="{Binding Text}" />
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>

    <local:Resolution DataContext="{Binding ElementName=CmbUsneseni, Path=SelectedValue}" Grid.Row="5" Grid.Column="1">
      <local:Resolution.Style>
        <Style>
          <Style.Triggers>
            <DataTrigger
              Binding="{Binding ElementName=CmbUsneseni, Path=SelectedValue}"
              Value="{x:Null}">
              <Setter Property="Button.IsEnabled" Value="false" />
            </DataTrigger>
          </Style.Triggers>
        </Style>
      </local:Resolution.Style>
    </local:Resolution>

    <StackPanel Orientation="Horizontal" Grid.Row="6" Grid.Column="1">
      <Button Click="AddUsneseni">_Přidat</Button>
      <Button Click="RemoveUsneseni" Content="_Smazat">
        <Button.Style>
          <Style>
            <Style.Triggers>
              <DataTrigger
                Binding="{Binding ElementName=CmbUsneseni, Path=SelectedValue}"
                Value="{x:Null}">
                <Setter Property="Button.IsEnabled" Value="false" />
              </DataTrigger>
            </Style.Triggers>
          </Style>
        </Button.Style>
      </Button>
    </StackPanel>
  </Grid>
</UserControl>